{
    "name": "author-tools",
    "displayName": "author-tools",
    "description": "A collection of tools to help writers for realpython.com",
    "version": "2018.12.0",
    "publisher": "realpython",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onCommand:extension.createPost"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Real Python: Hello World"
            },
            {
                "command": "extension.createPost",
                "title": "Real Python: Create Post"
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/markdown.code-snippets"
            },
            {
                "language": "yaml",
                "path": "./snippets/yaml.code-snippets"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.2",
        "tslint": "^5.12.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.26"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/realpython/author-tools"
    },
    "homepage": "https://github.com/realpython/author-tools/README.md",
    "icon": "real-python-logo-round.png"
}
